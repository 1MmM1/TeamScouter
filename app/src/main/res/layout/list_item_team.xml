<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/team_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_win_loss_tie_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:text="@string/win_loss_ties"
        android:textSize="17dp"/>

    <!--Text subject to change-->
    <TextView
        android:id="@+id/team_rank_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/rank"
        android:textSize="30dp"
        />

    <LinearLayout
        android:id="@+id/team_identifier_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_win_loss_tie_text_view"
        android:layout_toRightOf="@id/team_rank_text_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_team_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="Team Name"/>

        <TextView
            android:id="@+id/list_item_team_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:text="Team Number"/>

    </LinearLayout>


</RelativeLayout>